# Telefire México - Environment Variables Example
# Copy this file to .env and fill in your actual values

# ===========================================
# APPLICATION SETTINGS
# ===========================================

# Application Title
VITE_APP_TITLE="Telefire México - Sistemas de Detección de Incendios"

# API Base URL (for production deployment)
VITE_API_BASE_URL="https://your-domain.netlify.app/api"

# Environment
NODE_ENV="development"

# ===========================================
# CMS INTEGRATION (Strapi/Headless CMS)
# ===========================================

# Strapi Configuration
VITE_STRAPI_URL="https://your-strapi-instance.com"
VITE_STRAPI_TOKEN="your-strapi-api-token"

# Alternative CMS (Contentful example)
# VITE_CONTENTFUL_SPACE_ID="your-contentful-space-id"
# VITE_CONTENTFUL_ACCESS_TOKEN="your-contentful-access-token"

# ===========================================
# EMAIL SERVICES
# ===========================================

# EmailJS (for contact forms)
VITE_EMAILJS_SERVICE_ID="your-emailjs-service-id"
VITE_EMAILJS_TEMPLATE_ID="your-emailjs-template-id"
VITE_EMAILJS_PUBLIC_KEY="your-emailjs-public-key"

# SendGrid (alternative)
# SENDGRID_API_KEY="your-sendgrid-api-key"

# ===========================================
# ANALYTICS AND TRACKING
# ===========================================

# Google Analytics
VITE_GA_TRACKING_ID="G-XXXXXXXXXX"

# Google Tag Manager (optional)
VITE_GTM_ID="GTM-XXXXXXX"

# Facebook Pixel (optional)
VITE_FB_PIXEL_ID="your-facebook-pixel-id"

# ===========================================
# SOCIAL MEDIA INTEGRATION
# ===========================================

# WhatsApp Business
VITE_WHATSAPP_PHONE="+52xxxxxxxxxx"

# Company Social Links
VITE_COMPANY_LINKEDIN="https://linkedin.com/company/telefire-mexico"
VITE_COMPANY_TWITTER="https://twitter.com/telefire_mexico"
VITE_COMPANY_FACEBOOK="https://facebook.com/telefire.mexico"

# ===========================================
# MAP SERVICES
# ===========================================

# Google Maps API (for office locations)
VITE_GOOGLE_MAPS_API_KEY="your-google-maps-api-key"

# ===========================================
# THIRD-PARTY SERVICES
# ===========================================

# reCAPTCHA (for form protection)
VITE_RECAPTCHA_SITE_KEY="your-recaptcha-site-key"
RECAPTCHA_SECRET_KEY="your-recaptcha-secret-key"

# Cloudinary (for image management)
VITE_CLOUDINARY_CLOUD_NAME="your-cloudinary-cloud-name"

# ===========================================
# DATABASE (if using PostgreSQL)
# ===========================================

# Database connection (for production)
# DATABASE_URL="postgresql://user:password@host:port/database"
# PGHOST="your-postgres-host"
# PGPORT="5432"
# PGUSER="your-postgres-user"
# PGPASSWORD="your-postgres-password"
# PGDATABASE="telefire_mexico"

# ===========================================
# SECURITY
# ===========================================

# Session secret (for backend)
SESSION_SECRET="your-super-secret-session-key"

# JWT Secret (if using authentication)
JWT_SECRET="your-jwt-secret-key"

# API Rate Limiting
API_RATE_LIMIT="100"

# ===========================================
# MONITORING AND LOGGING
# ===========================================

# Sentry (error monitoring)
VITE_SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"

# LogRocket (user session recording)
VITE_LOGROCKET_APP_ID="your-logrocket-app-id"

# ===========================================
# DEVELOPMENT TOOLS
# ===========================================

# Hot reload port (development only)
DEV_PORT="5000"

# API mock data (development)
VITE_USE_MOCK_DATA="false"

# Debug mode
VITE_DEBUG_MODE="false"

# ===========================================
# NOTES
# ===========================================

# 1. Never commit actual secrets to version control
# 2. Use different values for development, staging, and production
# 3. Environment variables prefixed with VITE_ are exposed to the frontend
# 4. Variables without VITE_ prefix are server-side only
# 5. Always validate environment variables in your application code